<log4net debug="false">
  <appender name="Console" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%level] %date [%logger:%line] [%thread] %message %newline" />
    </layout>
  </appender>

  <root>
    <level value="INFO" />
    <appender-ref ref="Console" />
  </root>
  <logger name="MessageService">
    <level value="OFF"/>
  </logger>
  <logger name="StateMachineReplication">
    <level value="INFO"/>
  </logger>
  <logger name="TupleSpace">
    <level value="INFO"/>
  </logger>
</log4net>